
// Utility


// Clear a float with .clearfix
.clearfix

  &:after
    clear: both
    content: ' ' // The space content is one way to avoid an Opera bug.
    display: table

// Float either direction
.float-left
  float: left

.float-right
  float: right

.has-text-right
  text-align: right

.has-text-left
  text-align: left

.has-text-center
  text-align: center

.is-fullwidth
  width: 100%

.chart-container
  height: 40vh
  width: 100%

.pie-chart-container1
  position: relative
  height: 40vh
  width: 100%

.pie-chart-container2
  position: relative
  height: 35vh
  width: 100%

.chartWrapper
  overflow-x: auto;

.chartWrapper > canvas
  position: absolute;
  left: 0;
  top: 0;
  pointer-events:none;

.chartAreaWrapper
  width: 600px;
  overflow-x: scroll;
.m-t-10 {
  margin-top: 10px;
}
.display-inline
  display: inline !important

.p-l-0 {
  padding-left: 0 !important;
}
.p-t-6 {
  padding-top: 6px !important;
}
.m-t-0
  margin-top: 0 !important
.filter
  font-size: 1.4rem !important

.hourglass-green
  color: color-success

.hourglass-gray
  color: gray

.no-spinners::-webkit-inner-spin-button,
.no-spinners::-webkit-outer-spin-button
  -moz-appearance: none;
  -webkit-appearance: none;
  appearance: none;
  margin: 0;

input[type='number'].no-spinners
    -moz-appearance:textfield;

.process-bill-selection
  display: inline-block !important
  border: 1px solid #e1e1e1
  margin-right:20px !important
  width:60px !important
  padding-right: 0 !important

.process-bill-dropdown
  cursor:pointer
  padding-left:5px !important
  padding-right: 20px !important

#myObjectData
  width:100%
  height:500px;
  height:-webkit-fill-available;

.infotextbox
  width: 130px;
  background-color: #d1d1d1;
  border: .1rem solid #d1d1d1;
  padding: 6px 12px;
  font-size: 1rem;

table {
  border: .1rem solid #e1e1e1;
}
tbody {
  display:block;
  height:50vh;
  overflow:auto;
}
thead, tbody tr {
  display:table;
  width:100%;
  table-layout:fixed;
}
thead {
  width: calc( 100% - 1em )
}
table {
  width:100%;
}

td {
  word-break:break-all;
}
tr, thead {
  border-bottom: .1rem solid #e1e1e1;
  text-align: left;
}

@media (max-width: 768px) {
  .table-section {
    width: 768px;
  }
}
